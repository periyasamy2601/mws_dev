pipeline {
    agent any
    environment {
        NPM_TOKEN = credentials('github_npm_token') // Jenkins secret
    }
    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('pipeline/src') {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                dir('pipeline/src') {
                    sh 'npm run build'
                }
            }
        }

        stage('Make JS Executable') {
            steps {
                dir('pipeline/src') {
                    sh 'find ./dist -type f -name "*.js" -exec chmod +x {} \\;'
                }
            }
        }

        stage('Publish to GitHub Packages') {
            steps {
                dir('pipeline/src') {
                    sh 'npm publish --access public'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline finished successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
