stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('MySonarQube') {   // must match Jenkins SonarQube config name
                    script {
                        docker.image('sonarsource/sonar-scanner-cli:latest').inside("-v ${WORKSPACE}:/app -w /app") {
                            sh """
                                sonar-scanner \
                                  -Dsonar.projectKey=mws_avk_api \
                                  -Dsonar.projectName="mws_avk_api" \
                                  -Dsonar.sources=. \
                                  -Dsonar.host.url=http://192.168.2.20:9000 \
                                  -Dsonar.login=${SONAR_AUTH_TOKEN}N}
                            """
                        }
                    }
                }
            }
        }
