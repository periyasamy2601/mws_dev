pipeline {
    agent none

    parameters {
        booleanParam(name: 'MIGRATE', defaultValue: true, description: 'Run database migrations')
    }

    environment {
        DOCKER_IMAGE       = "mwsdev2025/mws_avk_api"
        SONAR_HOST         = "http://192.168.2.20:9000"
        SONAR_PROJECT_KEY  = "mws_avk_api"
        SONAR_PROJECT_NAME = "mws_avk_api"
        DB_HOST            = "192.168.2.20"
        DB_PORT            = "5432"
        DB_NAME            = "mws_avk_api"
        DB_USER            = "mws_avk_api"
        DB_PASS            = "qwert"
        NPM_TOKEN          = credentials('github_npm_token')
        BACKUP_FILE        = "/tmp/${DB_NAME}_backup.sql"
    }

    stages {

        stage('Checkout') {
            agent { label 'build-node' }
            steps {
                deleteDir()
                git branch: 'main', url: 'https://github.com/periyasamy2601/mws_dev.git'
            }
        }

        stage('SonarQube Scan') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    script {
                        try {
                            withSonarQubeEnv('sonar scanner') {
                                def scannerHome = tool 'sonar scanner'
                                sh """
                                    ${scannerHome}/bin/sonar-scanner \
                                    -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                    -Dsonar.projectName=${SONAR_PROJECT_NAME} \
                                    -Dsonar.sources=. \
                                    -Dsonar.host.url=${SONAR_HOST} \
                                    -Dsonar.scanner.workDirectory=/tmp/.sonar
                                """
                            }
                            echo "SonarQube scan passed."
                        } catch (err) {
                            error "SonarQube scan failed."
                        }
                    }
                }
            }
        }

        stage('Clean Workspace') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    sh 'rm -rf dist node_modules'
                }
            }
        }

        stage('Install Dependencies') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    sh 'npm install'
                }
            }
        }

        stage('Check for Migration Scripts') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    script {
                        def migrationFiles = sh(script: "ls migrate.ts || true", returnStdout: true).trim()
                        if (migrationFiles) {
                            echo "Migration script detected: migrate.ts"
                            env.MIGRATIONS_EXIST = 'true'
                        } else {
                            echo "No migration script detected."
                            env.MIGRATIONS_EXIST = 'false'
                        }
                    }
                }
            }
        }

        stage('Run Database Migrations') {
            agent { label 'build-node' }
            when {
                allOf {
                    expression { return params.MIGRATE == true }
                    expression { return env.MIGRATIONS_EXIST == 'true' }
                }
            }
            steps {
                dir('pipeline/src') {
                    echo "Running migrations via migrate.sh..."
                    script {
                        try {
                            echo "Backing up database before migration..."
                            sh """
                                PGPASSWORD=${DB_PASS} pg_dump -h ${DB_HOST} -U ${DB_USER} -p ${DB_PORT} \
                                --no-owner --no-privileges -F c -f ${BACKUP_FILE} ${DB_NAME}
                            """
                            sh """
                                chmod +x migrate.sh
                                ./migrate.sh
                            """
                            echo "Database migrations completed successfully."
                        } catch (err) {
                            echo "Migration failed! Restoring database from backup..."
                            sh """
                                PGPASSWORD=${DB_PASS} pg_restore -h ${DB_HOST} -U ${DB_USER} -p ${DB_PORT} \
                                -d ${DB_NAME} -c ${BACKUP_FILE}
                            """
                            error "Migration failed. Database restored. Pipeline stopped."
                        }
                    }
                }
            }
        }

        stage('Build Application') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    sh 'npm run build'
                }
            }
        }

        stage('Make JS Executable') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    sh 'find ./dist -type f -name "*.js" -exec chmod +x {} \\;'
                }
            }
        }

        stage('Build & Push Docker Image') {
            agent { label 'docker-node' }
            steps {
                dir('pipeline/src') {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:latest .
                        docker push ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Publish to GitHub Packages') {
            agent { label 'build-node' }
            steps {
                dir('pipeline/src') {
                    sh 'npm publish --access public'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline finished successfully."
        }
        failure {
            echo "❌ Pipeline failed."
        }
        always {
            cleanWs()
        }
    }
}
