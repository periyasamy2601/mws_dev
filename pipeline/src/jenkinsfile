pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent { label 'build-node' }
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      agent { label 'build-node' }
      steps {
        dir('src') {
          sh 'npm install'
        }
      }
    }

    stage('Build') {
      agent { label 'build-node' }
      steps {
        dir('src') {
          sh 'npm run build'
        }
      }
    }

    stage('Test') {
      agent { label 'build-node' }
      steps {
        dir('src') {
          sh 'npm test || true'  // prevents pipeline failure if no tests yet
        }
      }
    }

    stage('DB Migration') {
      agent { label 'build-node' }
      steps {
        dir('src') {
          sh 'npm run migrate || true'  // runs migration if script exists
        }
      }
    }

    stage('Docker Build & Push') {
      agent { label 'docker' }
      steps {
        dir('src') {
          sh """
            docker build -t mwsdev2025/mws_avk_api:1.0.0 .
            docker push mwsdev2025/mws_avk_api:1.0.0
          """
        }
      }
    }
  }

  post {
    always {
      node('build-node') {
        cleanWs()
      }
    }
  }
}
