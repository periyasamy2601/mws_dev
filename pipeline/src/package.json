{
  "name": "@periyasamy2601/mws_dev",
  "version": "1.0.0",
  "description": "MWS Dev API",
  "main": "dist/index.js",
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__/acceptance/program-status.test.js\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t mws-dconag-api .",
    "docker:run": "docker run -p 3000:3000 -d mws-dconag-api",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "minify": "uglifyjs-folder dist/ -e -o release/ -x .js",
    "prestart": "npm run rebuild",
    "start": "node -r source-map-support/register .",
    "dev-migrate": "NODE_ENV=development node dist/migrate",
    "stage-migrate": "NODE_ENV=stage node dist/migrate",
    "prod-migrate": "NODE_ENV=production node dist/migrate",
    "dev": "NODE_ENV=development npm run clean && npm run build && npm run start:watch",
    "stage": "NODE_ENV=stage npm run rebuild && node dist/index.js",
    "prod": "NODE_ENV=production npm run rebuild && node dist/index.js",
    "start:watch": "tsc-watch --target es2017 --outDir ./dist --onSuccess \"node .\"",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "rebuild": "npm run clean && npm run build && npm run minify"
  },
  "dependencies": {
    "@loopback/build": "^9.0.6",
    "@loopback/boot": "^5.0.6",
    "@loopback/core": "^5.1.1",
    "@loopback/repository": "^5.1.1",
    "@loopback/rest": "^12.0.6",
    "@loopback/rest-explorer": "^5.0.6",
    "@loopback/service-proxy": "^5.0.6",
    "pg": "^8.11.5",
    "source-map-support": "^0.5.21",
    "uglifyjs-folder": "^3.1.0"
  },
  "devDependencies": {
    "@loopback/eslint-config": "^16.0.4",
    "@loopback/prettier-config": "^8.0.4",
    "@loopback/testlab": "^6.0.5",
    "@types/node": "^20.14.2",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsc-watch": "^6.2.0",
    "typescript": "~5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/periyasamy2601/mws_dev.git"
  },
  "license": "MIT"
}
